<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/padding_large">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_author_item_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/textcolor_black666"
            android:textSize="@dimen/textsize_xsmall"
            tools:text="鸿洋" />

        <TextView
            android:id="@+id/textview_tag_item_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xxsmall"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/textsize_xsmall"
            tools:text="本站发布" />

        <TextView
            android:id="@+id/textview_date_item_question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xxsmall"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLines="1"
            android:textColor="@color/textcolor_black666"
            android:textSize="@dimen/textsize_xsmall"
            tools:text="2020.09.16 20:56" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_title_item_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/textcolor_black333"
        android:textSize="@dimen/textsize_middle"
        tools:text="鸿洋" />

    <TextView
        android:id="@+id/textview_des_item_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/textcolor_black666"
        android:textSize="@dimen/textsize_small"
        tools:text="鸿洋" />

    <TextView
        android:id="@+id/textview_tip_item_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/textcolor_black999"
        android:textSize="@dimen/textsize_small"
        tools:text="鸿洋" />

</LinearLayout>